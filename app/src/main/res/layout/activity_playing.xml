<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Playing">

    <TextView
        android:id="@+id/Player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="Player"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="2">


        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:stretchColumns="1"
            android:weightSum="6">

            <TableRow
                android:id="@+id/Ace"
                android:layout_weight="1">

                <TextView android:text="Ace" />

                <TextView
                    android:id="@+id/ddd"
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Deuces"
                android:layout_weight="1">

                <TextView android:text="Deuces" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Threes"
                android:layout_weight="1">

                <TextView android:text="Threes" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Fours"
                android:layout_weight="1">

                <TextView android:text="Fours" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Fives"
                android:layout_weight="1">

                <TextView android:text="Fives" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Sixes"
                android:layout_weight="1">

                <TextView android:text="Sixes" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:stretchColumns="1"
            android:weightSum="6">

            <TableRow
                android:id="@+id/Choice"
                android:layout_weight="1">

                <TextView
                    android:text="Choice"
                    android:textSize="15dp" />

                <TextView
                    android:gravity="right"
                    android:text="50"
                    android:textSize="15dp" />

            </TableRow>

            <TableRow
                android:id="@+id/Four_of_a_kind"
                android:layout_weight="1">

                <TextView android:text="4 of a kind" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Full_House"
                android:layout_weight="1">

                <TextView android:text="Full House" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/S_Straight"
                android:layout_weight="1">

                <TextView android:text="S_Straight" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/L_Straight"
                android:layout_weight="1">

                <TextView android:text="L_Straight" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

            <TableRow
                android:id="@+id/Yacht"
                android:layout_weight="1">

                <TextView android:text="Yacht" />

                <TextView
                    android:gravity="right"
                    android:text="two" />

            </TableRow>

        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="0" />

        <ImageView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="0" />

        <ImageView
            android:id="@+id/third"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="0" />

        <ImageView
            android:id="@+id/forth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="0" />

        <ImageView
            android:id="@+id/fifth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/ReRoll"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="ReRoll" />

        <Button
            android:id="@+id/Done"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Done" />

    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="남은 기회 : "
        android:textStyle="bold" />


</LinearLayout>